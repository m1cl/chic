{
  "package": {
    "productName": "chic",
    "version": "0.1.0"
  },
  "build": {
    "withGlobalTauri": true,
    "distDir": "../build",
    "devPath": "http://localhost:3000",
    "beforeDevCommand": "cd frontend/src && npm run dev",
    "beforeBuildCommand": "cd frontend/src && npm run build"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "de.chic.io",
      "icon": [
        "icons/chic_logo_1.jpeg",
        "icons/chic_logo_1.jpeg",
        "icons/chic_logo_1.jpeg",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": []
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    },
    "allowlist": {
      "all": true,
      "http": {
        "all": true
      },
      "fs": {
        "all": true
      }
    }
  }
}
